<%- include("../partials/header") %>

<div class="container">
    <div class="col-md-12" >
      <div class ="card">
        <img id= "pictures" class="img-thumbnail  card-img-top img-responsive" src="<%= campground.image %>" alt="">
        <div class="caption-full">
          <h4 class ="float-right">$ <%= campground.price %>/night</h4>
          <h4><a href=""><%= campground.name %></a></h4> 
          <p> <%= campground.description %></p>
          <p> 
            <em>Submitted by <%= campground.author.username %></em></p>
            <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
            <a class ="btn btn-warning" href="/index/<%= campground._id %>/edit">Edit Camp</a>
              <form id ="deleteform" action ="/index/<%= campground._id %>?_method=DELETE" method ="POST">
                <button class ="btn btn-danger">DELETE</button>
              </form>
            <% } %>         
        </div>
      </div>
      <div class="card bg-light">
        <div class="card- header text-right">
          <a href="/index/" class ="btn btn-success" style="margin-top:15px">Go Back</a>
          <a href="/index/<%=campground._id%>/comments/new" class ="btn btn-success" style="margin-top:15px">Add New Comment</a>
        </div>
        <hr>
        <div class="card-body">
        <% campground.comments.forEach(function(comment){%> 
            <div class ="row">
              <div class="col-md-12">
                  <strong><%= comment.author.username %></strong>
                  <span class =" float-right">10 days</span>
                  <p><%= comment.text %></p>
                  <% if(currentUser && comment.author.id.equals(currentUser._id)) { %>
                  <a href="/index/<%=campground._id%>/comments/<%=comment._id %>/edit" class = "btn btn-xs btn-warning"> EDIT</a>  
                  <form id="deleteform" action="/index/<%=campground._id %>/comments/<%=comment._id %>?_method=DELETE" method="POST">
                      <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                    </form> 
                  <% } %>                                
              </div>
            </div>
          
       <%})%>
         
        </div>
      </div>
   
      <!-- comment.author.username -->
   
    <p>
  
    </p>

   
    </div> 
  </div>   
</div>