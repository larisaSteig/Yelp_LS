<%- include("../partials/header") %>


<div class="container" id="add-new-camp">
  <header class='jumbotron'>
    <div class='container'>
      <h1> Welcome to Camp</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p><a class='btn btn-primary btn-large' href="/index/new">Add New Campground</a></p>
    </div>
  </header>


  <div class="row text-center" >
    <% gallery.forEach(function(campground){ %>
      <div class ='col-md-3 col-sm-6'>
        <div class="card">
          <img class="img-thumbnail card-img-top" src="<%= campground.image %>">
          <div class="card-body">
            <h4> <%= campground.name %></h4>
          </div>
        </div>
        <a class='btn btn-lg btn-primary btn-block' href="/index/<%= campground._id%>">More details</a> 
      </div>
      <% })%>
  </div>    
</div>

<%- include("../partials/footer") %>